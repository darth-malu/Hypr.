{
     "hyprland/workspaces": {
	    "format": "{icon}",
	    "format-icons": {
		    "active": "ÔÑò",
            //ÔÜí
		    "default": "ÔÑë"
	        },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "persistent-workspaces": {
            "*" :2
            }
    },

    "hyprland/window": {
    "format": "ÔÑÅ {}",
    "rewrite": {
        "(.*) ‚Äî Mozilla Firefox": "üåé $1",
        //dsdüåéddd
        "(.*) - kitty": "> [$1]"
        },
    "separate-outputs": true
    },

    "group/perfomance": {
        "orientation": "horizontal",
        "drawer": "enabled",
        "modules":[
            "memory",
            "cpu" 
            //"network",
                ]
    },

    "keyboard-state": {
        "numlock":true,
        "capslock":true,
        "format":"{name} {icon}",
        "format-icons": {
            "locked": "ÔàÖ",
            "unlocked": "ÔàÑ"
        }
    },
    "group/clock_leave":{
        "orientation":"horizontal",
        "modules":[
            "clock",
            "custom/wleave"
        ]
    },

    "custom/wleave": {
        "format": "ÔÄë",
        "on-click": "wleave",
        "tooltip": false
    },

  "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
         //"exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    

    "wireplumber": {
        "format": "{volume}%",
        "format-muted": "ÔÄ¶",
        "on-click": "helvum",
        "on-click-right": "pw-volume mute",
        "max-volume": 100,
        "scroll-step": 2 
    },

    "mpris": {
	    "format": "{player_icon} {dynamic}",
        "format-playing": "{player_icon} {title} {position}",
	    //"format-paused": "{status_icon} <i>{dynamic}</i>",
	    "format-paused": "{status_icon} {player} {title} {album} {position}",
        "format-len": 2,
        "interval": 1,
	    "player-icons": {
		    "default": "‚ñ∂",
            "spotify": "ÔÜº",
		    "mpv": "üéµ"
	    },
	    "status-icons": {
		    "paused": "‚è∏",
            "playing": "ÔÖÑ",
            "stopped": "ÔÅç"
	    },
	    "ignored-players": ["firefox"],
        //"dynamic-order": ["title", "artist", "album", "position", "length"],
        "dynamic-importance-order": ["title", "artist", "album", "position", "length"]
        //"dynamic-len": 1

    }

    



}
